{
    "openapi": "3.0.0",
    "info": {
        "title": "Project Configuration API",
        "version": "1.0.0",
        "description": "API for managing Project configuration including Application Environments etc. User must have Project Admin privilege on respective Project to execute these APIs."
    },
    "servers": [
    {
      "url": "{accelqLoginUrl}/awb/api/1.0/{tenantCode}/{projectCode}",
      "variables": {
        "accelqLoginUrl": {
          "default": "",
          "description": "Base URL for AccelQ login"
        },
        "tenantCode": {
          "default": "",
          "description": "Tenant code for your subscription"
        },
        "projectCode": {
          "default": "",
          "description": "Code for identifying the specific project"
        }
      }
    }
  ],
    "paths": {
        "/{projectCode}/config/app-environments": {
            "get": {
                "tags": [
                    "App Environments"
                ],
                "summary": "Retrieve list of App Environments for the project",
                "description": "Get a list of App Environments associated with the specified project.",
                "operationId": "getAllAppEnvironments",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Login username (email)"
                    },
                    {
                        "name": "api_key",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "API key of the user for authentication"
                    },
                    {
                        "name": "projectCode",
                        "in": "path",
                        "required": true,
                        "description": "The project code for which to retrieve app environments.",
                        "schema": {
                            "type": "string",
                            "example": "proj123"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "description": "Page number for pagination.",
                        "schema": {
                            "type": "integer",
                            "default": 1,
                            "example": 1
                        }
                    },
                    {
                        "name": "pageSize",
                        "in": "query",
                        "required": false,
                        "description": "Number of items per page (Maximum: 100).",
                        "schema": {
                            "type": "integer",
                            "default": 20,
                            "example": 20
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response with a list of app environments.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "page": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "pageSize": {
                                            "type": "integer",
                                            "example": 10
                                        },
                                        "totalPages": {
                                            "type": "integer",
                                            "example": 3
                                        },
                                        "totalCount": {
                                            "type": "integer",
                                            "example": 21
                                        },
                                        "results": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "pid": {
                                                        "type": "integer",
                                                        "example": 14885
                                                    },
                                                    "appEnvironmentName": {
                                                        "type": "string",
                                                        "example": "Test"
                                                    },
                                                    "description": {
                                                        "type": "string",
                                                        "nullable": true,
                                                        "example": "Testing Environment Data"
                                                    }
                                                }
                                            },
                                            "example": [
                                                {
                                                    "pid": 1,
                                                    "appEnvironmentName": "Staging",
                                                    "description": "Staging Environment"
                                                },
                                                {
                                                    "pid": 2,
                                                    "appEnvironmentName": "Prod",
                                                    "description": "Prod Environment"
                                                },
                                                {
                                                    "pid": 3,
                                                    "appEnvironmentName": "Live",
                                                    "description": "Live Environment"
                                                },
                                                {
                                                    "pid": 5,
                                                    "appEnvironmentName": "Staging 2",
                                                    "description": "Staging Environment"
                                                },
                                                {
                                                    "pid": 6,
                                                    "appEnvironmentName": "Test",
                                                    "description": "Test Environment"
                                                },
                                                {
                                                    "pid": 31,
                                                    "appEnvironmentName": "Sample",
                                                    "description": "Environment"
                                                },
                                                {
                                                    "pid": 38,
                                                    "appEnvironmentName": "Prod 2",
                                                    "description": "Prod2 Environment"
                                                },
                                                {
                                                    "pid": 39,
                                                    "appEnvironmentName": "Staging 3",
                                                    "description": ""
                                                },
                                                {
                                                    "pid": 41,
                                                    "appEnvironmentName": "Patch",
                                                    "description": "Patch Environment"
                                                },
                                                {
                                                    "pid": 44,
                                                    "appEnvironmentName": "Next Release",
                                                    "description": "Environment"
                                                }
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Forbidden - User does not have permission to fetch app environments",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "User do not have authorization to access this feature."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Project not found.",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": {
                                    "error": "Project with code 'proj123' not found."
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "App Environments"
                ],
                "summary": "Create a new App Environment",
                "description": "Create a new App Environment for the specified project.",
                "operationId": "createAppEnvironment",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Login username (email)"
                    },
                    {
                        "name": "api_key",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "API key of the user for authentication"
                    },
                    {
                        "name": "projectCode",
                        "in": "path",
                        "required": true,
                        "description": "The project code for which to create the app environment.",
                        "schema": {
                            "type": "string",
                            "example": "proj123"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "appEnvironmentName": {
                                        "type": "string",
                                        "example": "New App Environment",
                                        "description": "Name of the new app environment."
                                    },
                                    "description": {
                                        "type": "string",
                                        "nullable": true,
                                        "example": "Description for the new app environment",
                                        "description": "Optional description of the app environment."
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "App Environment successfully created.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "pid": {
                                            "type": "integer",
                                            "example": 15754
                                        },
                                        "appEnvironmentName": {
                                            "type": "string",
                                            "example": "New App Environment"
                                        },
                                        "description": {
                                            "type": "string",
                                            "nullable": true,
                                            "example": "Description for the new app environment"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request Error",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "examples": {
                                    "invalidName": {
                                        "summary": "Name validation error",
                                        "value": {
                                            "error": "Only alphabet, number, space, period and underscore are allowed in App Environment name."
                                        }
                                    },
                                    "limitReached": {
                                        "summary": "Max App Environment limit reached",
                                        "value": {
                                            "error": "Maximum App Environment limit of 500 reached. Unable to create additional App Environments."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Forbidden - User does not have permission to create app environment",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "User do not have authorization to access this feature."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Project not found.",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": {
                                    "error": "Project with code 'proj123' not found."
                                }
                            }
                        }
                    }
                }
            }
        },
        "/{projectCode}/config/app-environments/{appEnvironmentId}": {
            "put": {
                "tags": [
                    "App Environments"
                ],
                "summary": "Update an existing App Environment",
                "description": "Update an existing App Environment for the specified project.",
                "operationId": "updateAppEnvironment",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Login username (email)"
                    },
                    {
                        "name": "api_key",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "API key of the user for authentication"
                    },
                    {
                        "name": "projectCode",
                        "in": "path",
                        "required": true,
                        "description": "The project code for which to update the app environment.",
                        "schema": {
                            "type": "string",
                            "example": "proj123"
                        }
                    },
                    {
                        "name": "appEnvironmentId",
                        "in": "path",
                        "required": true,
                        "description": "The ID of the App Environment to update.",
                        "schema": {
                            "type": "integer",
                            "example": 15754
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "pid": {
                                        "type": "integer",
                                        "example": 15754,
                                        "description": "The ID of the App Environment to update."
                                    },
                                    "appEnvironmentName": {
                                        "type": "string",
                                        "example": "Updated App Environment",
                                        "description": "Name of the updated app environment."
                                    },
                                    "description": {
                                        "type": "string",
                                        "nullable": true,
                                        "example": "Updated description",
                                        "description": "Optional updated description of the app environment."
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "App Environment successfully updated.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "pid": {
                                            "type": "integer",
                                            "example": 15754
                                        },
                                        "appEnvironmentName": {
                                            "type": "string",
                                            "example": "Updated App Environment"
                                        },
                                        "description": {
                                            "type": "string",
                                            "nullable": true,
                                            "example": "Updated description"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request. Validation errors occurred.",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": {
                                    "error": "App environment name is required."
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "App Environment or Project not found.",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": {
                                    "error": "App environment with ID '15754' not found."
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "App Environments"
                ],
                "summary": "Delete an existing App Environment",
                "description": "Delete an existing App Environment for the specified project.",
                "operationId": "deleteAppEnvironment",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Login username (email)"
                    },
                    {
                        "name": "api_key",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "API key of the user for authentication"
                    },
                    {
                        "name": "projectCode",
                        "in": "path",
                        "required": true,
                        "description": "The project code for which to delete the app environment.",
                        "schema": {
                            "type": "string",
                            "example": "proj123"
                        }
                    },
                    {
                        "name": "appEnvironmentId",
                        "in": "path",
                        "required": true,
                        "description": "The ID of the App Environment to delete.",
                        "schema": {
                            "type": "integer",
                            "example": 15754
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "App Environment successfully deleted."
                    },
                    "400": {
                        "description": "Bad Request. Validation errors occurred.",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": {
                                    "error": "Invalid dataset ID provided."
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "App Environment or Project not found.",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": {
                                    "error": "App environment with ID '15754' not found."
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
